{
  "name": "task-manager",
  "version": "1.0.0",
  "repository": "git@github.com:vfhnbyb/task-manager.git",
  "author": "martinity <a.martynov@itnovation.pro>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "workspaces": ["backend", "frontend"],
  "scripts": {
    "dev": "concurrently \"yarn --cwd backend dev\" \"yarn --cwd frontend dev\"",
    "start": "concurrently \"yarn --cwd backend start\" \"yarn --cwd frontend start\"",
    "migrate": "yarn --cwd backend migrate",
    "seed": "yarn --cwd backend seed",
    "setup": "yarn migrate && yarn seed",
    "ws:list": "yarn workspaces list"
  },
  "devDependencies": {
    "concurrently": "8.2.2"
  }
}
